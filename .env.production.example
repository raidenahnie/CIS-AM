# ========================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ========================================
# Copy this file to .env when deploying to production
# and update all values accordingly

APP_NAME="CIS-AM"
APP_ENV=production
APP_KEY=base64:YOUR_PRODUCTION_KEY_HERE
APP_DEBUG=false
APP_TIMEZONE="Asia/Manila"
APP_URL=https://yourdomain.com

# Security Settings - CRITICAL FOR PRODUCTION
# Set this to your actual domain(s), separated by commas
ALLOWED_ORIGINS="https://yourdomain.com,https://www.yourdomain.com"

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

DB_CONNECTION=mysql
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci
DB_HOST=your_production_db_host
DB_PORT=3306
DB_DATABASE=your_production_database
DB_USERNAME=your_production_db_user
DB_PASSWORD=your_secure_password

# Session Configuration - PRODUCTION SETTINGS
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=.yourdomain.com
SESSION_SECURE_COOKIE=true  # Must be true for HTTPS
SESSION_HTTP_ONLY=true      # Always true - prevents XSS
SESSION_SAME_SITE=strict    # Strict for production

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_production_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=your_production_email@gmail.com
MAIL_FROM_NAME="Curriculum Implementation System"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"
